<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>helloservlet</servlet-name>
        <servlet-class>com.example.servletex2.HelloServlet</servlet-class>

        <init-param>//it is used in only one servlet
            <param-name>num1</param-name>
            <param-value>20</param-value>
        </init-param>

        <init-param>
            <param-name>num2</param-name>
            <param-value>40</param-value>
        </init-param>

    </servlet>
    <servlet-mapping>
        <servlet-name>helloservlet</servlet-name>
        <url-pattern>/hello-servlet</url-pattern>
    </servlet-mapping>

    <context-param>//it is globally used in all servlet application
        <param-name>Country</param-name>
        <param-value>India</param-value>
    </context-param>
</web-app>