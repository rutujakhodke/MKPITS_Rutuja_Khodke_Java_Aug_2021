<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
 <bean id="emp" class="com.example.springp8.Employee">
     <property name="id" value="11"></property>
     <property name="name" value="rutuja"></property>

 </bean>

    <bean id="rob" class="com.example.springp8.Report">
        <property name="listemp">
            <list>
<!--we can use configuration that is already made in bean.xml -->
                <ref bean="emp"></ref>
                <bean class="com.example.springp8.Employee">
                    <property name="id" value="12"></property>
                    <property name="name" value="rashi"></property>
                </bean>

                <bean class="com.example.springp8.Employee">
                    <property name="id" value="13"></property>
                    <property name="name" value="Nidhi"></property>
                </bean>

                <bean class="com.example.springp8.Employee">
                    <property name="id" value="14"></property>
                    <property name="name" value="Priyanka"></property>
                </bean>
            </list>

        </property>

    </bean>
</beans>